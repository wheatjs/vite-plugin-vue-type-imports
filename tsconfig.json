{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["vitest/globals", "vitest/importMeta"],
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/coverage/**"
  ]
}